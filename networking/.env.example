# Cloudflare API credentials (used by Traefik for DNS-01 ACME challenge and by cloudflare-ddns)
CLOUDFLARE_API_EMAIL=you@example.com
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Comma-separated list of Cloudflare proxy IP ranges to trust for forwarded headers.
# See https://www.cloudflare.com/ips/ for the current list.
CLOUDFLARE_TRUSTED_IPS=173.245.48.0/20,...

# Google OAuth2 credentials (used by oauth2-proxy)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# 16-byte random hex string used to sign oauth2-proxy session cookies.
# Generate with: python3 -c "import secrets; print(secrets.token_hex(16))"
GOOGLE_OAUTH2_COOKIE_SECRET=your-32-char-hex-cookie-secret

# Comma-separated list of email addresses allowed to authenticate via OAuth.
OAUTH2_AUTHORIZED_EMAILS=you@example.com
