{
  // General settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Use local prettier
  // "prettier.prettierPath": "./node_modules/.bin/prettier",
  "prettier.configPath": ".prettierrc",

  // Settings for HTML/CSS
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "css.validate": false, // disable built-in linter if using Stylelint

  // Associate .html.jinja2 files with Jinja language
  "files.associations": {
    "*.html.jinja2": "jinja-html"
  },

  // HTML and Jinja2 template formatting
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jinja-html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // Python-specific settings
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  // Rewrap settings
  "rewrap.wrappingColumn": 88,
  "rewrap.autoWrap.enabled": false
}
