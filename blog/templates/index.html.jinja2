<!doctype html>
<html lang="en">
  <head>
    <title>Blog | JM Homelab</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/icon/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/assets/icon/favicon.ico" />
    <link rel="stylesheet" href="/assets/styles/main.css?v=1.3" />
  </head>
  <body>
    <a href="https://jamesmassucco.com" class="site-home-link">
      <img src="/assets/icon/favicon-96x96.png" alt="Home" class="site-logo" />
      <span>Home</span>
    </a>

    <h1>Blog</h1>
    <section>
      <div class="grid">
        {% for post in posts %}
          <a href="posts/{{ post.metadata.slug }}.html" class="card" style="text-decoration: none">
            <h3>{{ post.metadata.title }}</h3>
            <p class="date">{{ post.metadata.dt | datefmt }}</p>
            <p>{{ post.metadata.summary }}</p>
            {# {% if post.metadata.tags %}
              <p class="tags">
                {% for tag in post.metadata.tags %}
                  <span class="tag">{{ tag }}</span>
                {% endfor %}
              </p>
            {% endif %} #}
          </a>
        {% endfor %}
      </div>
    </section>

    <footer>Â© 2025 James Massucco</footer>
  </body>
</html>
