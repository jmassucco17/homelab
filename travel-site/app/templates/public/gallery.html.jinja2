<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Pictures Gallery</title>
    <link rel="stylesheet" href="/assets/css/gallery.css" />
  </head>
  <body>
    <a href="/admin" class="admin-link">Admin Panel ‚Üí</a>
    <a href="/" class="map-link">Map View ‚Üí</a>

    <div class="header">
      <h1>Travel Pictures</h1>
      <p>Exploring the world, one picture at a time</p>
    </div>

    <div id="gallery" class="gallery">
      <div class="loading">Loading pictures...</div>
    </div>

    <!-- Modal for full-size image viewing -->
    <div id="imageModal" class="modal">
      <span class="modal-close">&times;</span>
      <img class="modal-content" id="modalImage" />
    </div>

    <script>
      // Load and display pictures
      async function loadGallery() {
        const galleryDiv = document.getElementById('gallery')

        try {
          const response = await fetch('/pictures')
          const pictures = await response.json()

          if (pictures.length === 0) {
            galleryDiv.innerHTML =
              '<div class="no-pictures">No pictures available yet. Check back soon!</div>'
            return
          }

          galleryDiv.innerHTML = pictures
            .map(
              (picture) => `
                    <div class="picture-card">
                        <img src="/pictures/${picture.id}/file" 
                             alt="${picture.original_filename}" 
                             class="picture-image"
                             onclick="openModal('/pictures/${picture.id}/file', '${picture.original_filename}')">
                        <div class="picture-info">
                            <div class="picture-filename">${picture.location.location_name}</div>
                            ${picture.description ? `<div class="picture-description">"${picture.description}"</div>` : ''}
                            <div class="picture-meta">
                                ${
                                  picture.date_taken
                                    ? `
                                    <div class="date-info">
                                        <span class="meta-icon">üìÖ</span>
                                        Taken: ${formatDate(picture.date_taken)}
                                    </div>
                                `
                                    : ''
                                }
                                ${
                                  picture.location.latitude && picture.location.longitude
                                    ? `
                                    <div class="location-info">
                                        <span class="meta-icon">üìç</span>
                                        Location: ${picture.location.latitude.toFixed(4)}, ${picture.location.longitude.toFixed(4)}
                                    </div>
                                `
                                    : ''
                                }
                            </div>
                        </div>
                    </div>
                `,
            )
            .join('')
        } catch (error) {
          galleryDiv.innerHTML =
            '<div class="error-message">Failed to load pictures. Please try again later.</div>'
          console.error('Error loading gallery:', error)
        }
      }

      // Format date function
      function formatDate(dateString) {
        const date = new Date(dateString)
        return date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })
      }

      // Format file size function
      function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes'
        const k = 1024
        const sizes = ['Bytes', 'KB', 'MB', 'GB']
        const i = Math.floor(Math.log(bytes) / Math.log(k))
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i]
      }

      // Modal functionality
      function openModal(imageSrc, altText) {
        const modal = document.getElementById('imageModal')
        const modalImg = document.getElementById('modalImage')

        modal.style.display = 'block'
        modalImg.src = imageSrc
        modalImg.alt = altText
      }

      // Close modal functionality
      document.querySelector('.modal-close').addEventListener('click', function () {
        document.getElementById('imageModal').style.display = 'none'
      })

      // Close modal when clicking outside the image
      document.getElementById('imageModal').addEventListener('click', function (e) {
        if (e.target === this) {
          this.style.display = 'none'
        }
      })

      // Close modal with Escape key
      document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') {
          document.getElementById('imageModal').style.display = 'none'
        }
      })

      // Load gallery on page load
      loadGallery()
    </script>
  </body>
</html>
