<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .trip-section {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        margin-bottom: 2rem;
      }
      .location-item {
        border: 1px solid #e9ecef;
        border-radius: 0.25rem;
        background-color: #f8f9fa;
        margin-bottom: 0.5rem;
        padding: 1rem;
      }
      .add-location-btn {
        border: 2px dashed #6c757d;
        background-color: transparent;
        padding: 1rem;
        width: 100%;
        border-radius: 0.25rem;
        margin-bottom: 0.5rem;
      }
      .add-location-btn:hover {
        background-color: #f8f9fa;
        border-color: #495057;
      }
      .move-buttons .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <span class="navbar-brand">Travel Locations Admin</span>
        <div class="navbar-nav ms-auto">
          <span class="navbar-text me-3">Welcome, {{ user.email }}</span>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Trips ({{ trips|length }})</h2>
        <button class="btn btn-primary" onclick="showNewTripModal()">
          + New Trip
        </button>
      </div>

      {% if trips %}
        {% for trip in trips %}
          <div class="trip-section">
            <div class="card-header d-flex justify-content-between align-items-center">
              <div>
                <h4 class="mb-0">{{ trip.name }}</h4>
                <small class="text-muted">
                  {{ trip.start_date.strftime('%Y-%m-%d') }} - {{ trip.end_date.strftime('%Y-%m-%d') }} ({{ trip.duration_days }} days)
                </small>
              </div>
              <div>
                <button class="btn btn-sm btn-outline-danger" onclick="deleteTrip({{ trip.id }})">
                  Delete Trip
                </button>
              </div>
            </div>
            <div class="card-body">
              {% if trip.locations %}
                {% for location in trip.locations %}
                  <div class="location-item d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                      <h6 class="mb-1">{{ location.name }}</h6>
                      <p class="mb-1 text-muted">{{ location.city }}, {{ location.country }}</p>
                      <small class="text-muted">
                        {{ location.start_date.strftime('%Y-%m-%d') }} - {{ location.end_date.strftime('%Y-%m-%d') }} ({{ location.days }} days)
                      </small>
                    </div>
                    <div class="d-flex gap-2">
                      <div class="move-buttons">
                        <form method="post" action="/admin/locations/{{ location.id }}/move" style="display: inline;">
                          <input type="hidden" name="direction" value="up">
                          <button type="submit" class="btn btn-outline-secondary" {% if loop.first %}disabled{% endif %}>↑</button>
                        </form>
                        <form method="post" action="/admin/locations/{{ location.id }}/move" style="display: inline;">
                          <input type="hidden" name="direction" value="down">
                          <button type="submit" class="btn btn-outline-secondary" {% if loop.last %}disabled{% endif %}>↓</button>
                        </form>
                      </div>
                      <button
                        class="btn btn-sm btn-outline-primary"
                        onclick="editLocation({{ location.id }}, '{{ location.name }}', '{{ location.city or '' }}', '{{ location.country or '' }}', {{ location.days }})"
                      >
                        Edit
                      </button>
                      <form
                        method="post"
                        action="/admin/locations/{{ location.id }}/delete"
                        style="display: inline;"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-outline-danger"
                          onclick="return confirm('Are you sure?')"
                        >
                          Delete
                        </button>
                      </form>
                    </div>
                  </div>
                  <button 
                    class="add-location-btn btn btn-outline-secondary"
                    onclick="showAddLocationModal({{ trip.id }}, {{ location.id }})"
                  >
                    + Add Location After This
                  </button>
                {% endfor %}
              {% else %}
                <button 
                  class="add-location-btn btn btn-outline-secondary"
                  onclick="showAddLocationModal({{ trip.id }})"
                >
                  + Add First Location
                </button>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="text-center py-5">
          <p class="text-muted">No trips created yet.</p>
          <button class="btn btn-primary" onclick="showNewTripModal()">
            Create Your First Trip
          </button>
        </div>
      {% endif %}
    </div>

    <!-- New Trip Modal -->
    <div class="modal fade" id="newTripModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <form method="post" action="/admin/trips">
            <div class="modal-header">
              <h5 class="modal-title">Create New Trip</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="trip_name" class="form-label">Trip Name *</label>
                <input type="text" class="form-control" id="trip_name" name="name" required />
              </div>
              <div class="mb-3">
                <label for="trip_start_date" class="form-label">Start Date *</label>
                <input type="date" class="form-control" id="trip_start_date" name="start_date" required />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">Create Trip</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Add Location Modal -->
    <div class="modal fade" id="addLocationModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <form method="post" id="addLocationForm">
            <div class="modal-header">
              <h5 class="modal-title">Add New Location</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="location_name" class="form-label">Location Name *</label>
                <input type="text" class="form-control" id="location_name" name="name" required />
              </div>
              <div class="mb-3">
                <label for="location_city" class="form-label">City *</label>
                <input type="text" class="form-control" id="location_city" name="city" required />
              </div>
              <div class="mb-3">
                <label for="location_country" class="form-label">Country *</label>
                <input type="text" class="form-control" id="location_country" name="country" required />
              </div>
              <div class="mb-3">
                <label for="location_days" class="form-label">Number of Days *</label>
                <input
                  type="number"
                  class="form-control"
                  id="location_days"
                  name="days"
                  min="1"
                  required
                />
              </div>
              <input type="hidden" id="after_location_id" name="after_location_id" />
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">Add Location</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Edit Location Modal -->
    <div class="modal fade" id="editLocationModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <form method="post" id="editLocationForm">
            <div class="modal-header">
              <h5 class="modal-title">Edit Location</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="edit_location_name" class="form-label">Location Name *</label>
                <input type="text" class="form-control" id="edit_location_name" name="name" required />
              </div>
              <div class="mb-3">
                <label for="edit_location_city" class="form-label">City *</label>
                <input type="text" class="form-control" id="edit_location_city" name="city" required />
              </div>
              <div class="mb-3">
                <label for="edit_location_country" class="form-label">Country *</label>
                <input type="text" class="form-control" id="edit_location_country" name="country" required />
              </div>
              <div class="mb-3">
                <label for="edit_location_days" class="form-label">Number of Days *</label>
                <input
                  type="number"
                  class="form-control"
                  id="edit_location_days"
                  name="days"
                  min="1"
                  required
                />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function showNewTripModal() {
        new bootstrap.Modal(document.getElementById('newTripModal')).show()
      }

      function showAddLocationModal(tripId, afterLocationId) {
        document.getElementById('addLocationForm').action = `/admin/trips/${tripId}/locations`
        document.getElementById('after_location_id').value = afterLocationId || ''
        new bootstrap.Modal(document.getElementById('addLocationModal')).show()
      }

      function editLocation(id, name, city, country, days) {
        document.getElementById('editLocationForm').action = `/admin/locations/${id}/edit`
        document.getElementById('edit_location_name').value = name
        document.getElementById('edit_location_city').value = city
        document.getElementById('edit_location_country').value = country
        document.getElementById('edit_location_days').value = days
        new bootstrap.Modal(document.getElementById('editLocationModal')).show()
      }

      function deleteTrip(tripId) {
        if (confirm('Are you sure you want to delete this trip and all its locations?')) {
          const form = document.createElement('form')
          form.method = 'POST'
          form.action = `/admin/trips/${tripId}/delete`
          document.body.appendChild(form)
          form.submit()
        }
      }
    </script>
  </body>
</html>